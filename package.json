{
  "name": "env-validate",
  "version": "1.0.0",
  "description": "Type-safe environment variable validator with CLI support for Node.js and TypeScript projects.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.js"
    }
  },
  "bin": {
    "env-validate": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "rimraf dist && npx tsup",
    "lint": "npx eslint \"./src/**/*.{js,ts,json}\"",
    "format": "npx prettier --write \"./src/**/*.{js,ts,json}\"",
    "format:check": "npx prettier --check \"./src/**/*.{js,ts,json}\"",
    "test": "npx vitest",
    "prepare": "husky"
  },
  "keywords": [
    "env",
    "environment",
    "dotenv",
    "validator",
    "validation",
    "cli",
    "typescript",
    "nodejs",
    "config",
    "schema"
  ],
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandeep-shome/env-validate.git"
  },
  "homepage": "https://github.com/sandeep-shome/env-validate#readme",
  "bugs": {
    "url": "https://github.com/sandeep-shome/env-validate/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Sandeep Shome",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/node": "^24.0.8",
    "commander": "^14.0.0",
    "eslint": "^9.30.0",
    "execa": "^9.6.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.0.0",
    "log-symbols": "^7.0.1"
  }
}
